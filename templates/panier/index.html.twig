{% block head %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<title>Panier</title>
{% endblock %}
{% block body %}
  {% include 'layouts/nav.html.twig' %}
  <div class="container">
      <br>
      <h1>Panier</h1>
      <table class="table table-bordered">
        <tr>
          <th>Nom product</th>
          <th>prix</th>
          <th>quantité</th>
          <th>prix total</th>
          <th>actions</th>
        </tr>
        {% for item in items %}
          <tr>
            <td>{{item.produit.nom}}</td>
            <td>{{item.produit.prix}}</td>
            <td>{{item.quantity}}</td>
            <td>{{item.produit.prix * item.quantity}}</td>
            <td>
              <a href="{{path('panier_remove',{'id':item.produit.id})}}" class="btn btn-danger">supprimer du panier</a>
            </td>
          </tr> 
        {% else %}
         <p>aucun panier ajouté</p>
        {% endfor %}        
      </table>
      <br><br>
      <h2>Total: {{total}} Dinars</h2>
      <div class="row">
        <a data-turbo="false" href="{{path('app_commande',{'type':'valider commande'})}}" class="btn btn-primary col-2 m-lg-1">valider la commande</a>
        <a href="{{path('panier_remove_all')}}" class="btn btn-danger col-2 m-lg-1">supprimer le panier</a>
      </div>
  </div>
{% endblock %}



