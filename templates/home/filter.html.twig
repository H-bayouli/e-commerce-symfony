{% block head %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<title>Produits</title>
{% endblock %}

{% block body %}
    {% include 'layouts/nav.html.twig' %}
    <br>
    <div class="container">
        <h1>{{subcategory.name}}</h1>
        <br>
        <div class="row">
            {% for produit in products %}
                <div class="col-md-3 mt-4">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset('uploads/images/'~produit.image) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <a style="text-decoration:none" href="{{ path('app_product_show', {'id': produit.id}) }}">
                                <h5 class="card-title">{{produit.nom}}</h5>
                            </a>
                            <p class="card-text">{{produit.description|slice(0,50)}}...</p>
                            <h3>{{produit.prix}} Dinars </h3>
                            <a href="#" class="btn btn-outline-primary">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
