{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container security-form">
<div class="login-form">
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.email,{'attr':{'class':'form form-control','palceholder':"email"}}) }}
        <br>
        {{ form_widget(registrationForm.plainPassword, {'attr':{'class':'form form-control','palceholder':"password"}}) }}
        <br>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-block btn-primary">Register</button>
    {{ form_end(registrationForm) }}
</div>
</div>
{% endblock %}
