{% if pageCount > 1 %}
    <nav aria-label="...">
        <ul style="display:flex; aligh-items:center; justify-content: space-around" class="pagination">
            {% if previous is defined %}
                <li class="page-item">
                    <a href="{{ path(route, query|merge({(pageParameterName):previous})) }}" class="page-link">Previous</a>
                </li>
            {% endif %}
            {% for page in pagesInRange %}
                {% if page == current %}
                    <li class="page-item active">
                        <a style="border-radius:50%; background: green" class="page-link" href="{{ path(route, query|merge({(pageParameterName):page})) }}" aria-current="page">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <a style="border-radius:50%" class="page-link" href="{{ path(route, query|merge({(pageParameterName):page})) }}" aria-current="page">{{ page }}</a>
                    </li>
                {% endif %}

            {% endfor %}
            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName):next})) }}">Next</a>
                </li>
            {% endif %}        
        </ul>
    </nav>
{% endif %}

