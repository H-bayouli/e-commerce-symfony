{% block head %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<title>Produits</title>
{% endblock %}
{% block body %}
    {% include 'layouts/nav.html.twig' %}
    <br>
    <div class="container">
        <h1>Produits</h1>
        <br>
        {% include 'layouts/_flash_message.html.twig'%}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.description|slice(0,100)}}...</td>
                    <td>{{ produit.prix }}</td>
                    <td>
                        {% if produit.stock > 0 %}
                            {{ produit.stock }}
                        {% else %}
                            <span class="text-danger">stock épuisé</span>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                        <a class="btn btn-primary" href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                        <a class="btn btn-primary" href="{{ path('app_produit_stock_add', {'id': produit.id}) }}">add stock</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-primary" href="{{ path('app_produit_new') }}">Create new</a>
    </div>
{% endblock %}
